<style lang="scss">
	@use "../styles/parcial/variables" as *;

	.section-padding {
		padding: 8rem 0;
	}

	.bg-light {
		background-color: $section-bg;
	}

	.accent-bg {
		background-color: $brand-color;
		color: white;
		h2 { color: white; }
	}

	.text-center { text-center: center; }
	
	.hero {
		position: relative;
		height: 80vh;
		min-height: 500px;
		display: flex;
		align-items: center;
		overflow: hidden;
		background: #000;

		&__bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 1;
			opacity: 0.6;
			
			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}

		&__content {
			position: relative;
			z-index: 2;
		}

		&__text {
			max-width: 650px;
			color: white;

			h1 {
				font-size: 4.5rem;
				font-weight: 700;
				line-height: 1.2;
				margin-bottom: 2rem;
				color: white;

				span {
					color: $brand-color;
				}
			}

			p {
				font-size: 1.8rem;
				margin-bottom: 3rem;
				opacity: 0.9;
			}
		}
	}

	.section-title {
		margin-bottom: 6rem;
		h2 {
			font-size: 3.2rem;
			margin-bottom: 1.5rem;
		}
	}

	.trust-card {
		text-align: center;
		padding: 3rem;
		transition: transform 0.3s ease;

		&:hover {
			transform: translateY(-10px);
		}

		.icon {
			font-size: 4rem;
			margin-bottom: 2rem;
			display: block;
		}

		h3 {
			font-size: 2rem;
			margin-bottom: 1.5rem;
		}
	}

	.img-rounded {
		border-radius: 8px;
	}

	.shadow {
		box-shadow: 0 20px 40px rgba(0,0,0,0.1);
	}

	.about__text {
		padding-left: 5rem;
		
		.subtitle {
			text-transform: uppercase;
			color: $brand-color;
			font-weight: 700;
			letter-spacing: 1px;
			display: block;
			margin-bottom: 1rem;
		}
	}

	.check-list {
		list-style: none;
		margin: 2rem 0;
		padding: 0;

		li {
			position: relative;
			padding-left: 3rem;
			margin-bottom: 1rem;
			font-weight: 600;

			&:before {
				content: '‚úì';
				position: absolute;
				left: 0;
				color: $brand-color;
				font-weight: 900;
			}
		}
	}

	.button-white {
		background-color: white;
		color: $brand-color;
		border: none;
		&:hover {
			background-color: #eee;
			color: $brand-color-dark;
		}
	}

	@media (max-width: 40rem) {
		.hero__text h1 { font-size: 3rem; }
		.section-padding { padding: 5rem 0; }
		.about__text { padding-left: 1.5rem; margin-top: 3rem; }
	}
</style>
